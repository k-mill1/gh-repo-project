<div>
  <label for={{@id}} class="block text-sm font-medium text-gray-700">
    {{@label}}

    {{#if @required}}
      <span>*</span>
    {{/if}}
  </label>

  <input
    id={{@id}}
    type={{@type}}
    placeholder={{@placeholder}}
    required={{@required}}
    class="mt-1 block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
    {{on "input" this.handleInput}}
  />
</div>